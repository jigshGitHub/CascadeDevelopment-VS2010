@model IEnumerable<Cascade.Data.Models.vwAccount>
@using Cascade.Web.Presentation.ExtensionMethods
<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />
<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>
<div id="divpimsMediaRecords">
    <table id="pimsMediaRecords" class="display">
        <thead>
            <tr>
                <th>
                    Last name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Client Account #
                </th>
                <th>
                    Original Account #
                </th>
                <th>
                    Opened Date
                </th>
                <th>
                    C/O Date
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pimsRecord in Model)
            {

                <tr>
                    <td>@pimsRecord.LastName
                    </td>
                    <td>@pimsRecord.FirstName
                    </td>
                    <td>@pimsRecord.ACCOUNT
                    </td>
                    <td>@pimsRecord.OriginalAccount
                    </td>
                    <td>@pimsRecord.OpenDate.ConverToDate()
                    </td>
                    <td>@pimsRecord.ChargeOffDate.ConverToDate()
                    </td>
                    <td style="">@Html.ActionLink("View Details", "Create", new { id = pimsRecord.ACCOUNT })
                    </td>
                </tr> 
            }
        </tbody>
    </table>
</div>

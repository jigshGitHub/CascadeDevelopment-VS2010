            //                $.ajax({
            //                    url: url,
            //                    async: true,
            //                    success: function (data) {
            //                        alert('Media has been confirmed as downloaded');
            //                    },
            //                    error: function (xhr, status, error) {

            //                    }
            //                });
            //            }
            return eval(response);
        });
    });
</script>

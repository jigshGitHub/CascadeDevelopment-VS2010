@model IList<Cascade.Data.Models.vw_PortfolioCashPosition>
@using Cascade.Web.Presentation.ExtensionMethods

<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />

<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>

<h2>Report: Portfolio Cash Position</h2>

<div id="divPortCashPosition">
    <table id="portCashPosition" class="display">
        <thead>
            <tr> 
                <th>Portfolio#</th>
                <th>Closing Date</th>
                <th>Purchase Price</th>
                <th>Sum of Sales Price</th>
                <th>Cash Position</th>
                <th>Company</th> 
                <th>Return on Capital</th>  
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var cashposition in Model)
            {
                <tr>
                    <td>@cashposition.Portfolio_</td>
                    <td>@cashposition.ClosingDate.ConverToDate()</td>
                    <td>@cashposition.PurchasePrice.ToIntegerCurrency()</td>
                    <td>@cashposition.SumOfSalesPrice.ToIntegerCurrency()</td>
                    <td>@cashposition.CashPos.ToIntegerCurrency()</td>
                    <td>@cashposition.Company</td>
                    <td>@cashposition.Return_on_Capital.ToPercentage()</td>
                </tr> 
            }
        </tbody>
    </table>
</div>
@model IList<Cascade.Data.Models.PeopleViewEditResult>
@using Cascade.Web.Presentation.ExtensionMethods

<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />

<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>

<h2>Results: &nbsp;
    
    @if (Model.Count > 0)
    {
        <a href="@Url.Action("Export", new { FirstName= @ViewBag.FirstName, LastName= @ViewBag.LastName })"><img src="@Url.Content("~/Images/excel.jpg")" alt="Export To Excel" /></a>
    }
    
</h2>

<div id="divPeopleRecords">

    <table id="peopleRecords" class="display">
        <thead>
            <tr> 
                <th></th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var dpsRecord in Model)
            {
                <tr>
                    <td>@Html.ActionLink("View", "Details", new {  id=dpsRecord.PID })</td>
                    <td>@dpsRecord.FName</td>
                    <td>@dpsRecord.LName</td>
                    <td>@dpsRecord.Address</td>
                </tr> 
            }
        </tbody>
        @*Hidden fields for the Export to excel*@
        <tr>
            <td>
                @Html.Hidden("FirstName",(string)(@ViewBag.FirstName))
                @Html.Hidden("LastName",(string)(@ViewBag.LastName))
            </td>
        </tr>
    </table>
</div>


@model IList<Cascade.Data.Models.TBL_COMPANIES>

<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />

<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>

<h2>View Companies:</h2>

<div id="divCompanyRecords">
    <table id="companyRecords" class="display">
        <thead>
            <tr> 
                <th></th>
                <th>Company Name</th>
                <th>POC Last Name</th>
                <th>POC First Name</th>
                <th>City</th>
                <th>Country</th>
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var companyRecord in Model)
            {
                <tr>
                    <td>@Html.ActionLink("View", "Details", new {  id=companyRecord.COMPANIESID })</td>
                    <td>@companyRecord.COMPANYNAME</td>
                    <td>@companyRecord.POCLastName</td>
                    <td>@companyRecord.POCFirstName</td>
                    <td>@companyRecord.CITY</td>
                    <td>@companyRecord.Country</td>
                    
                </tr> 
            }
        </tbody>
    </table>
</div>


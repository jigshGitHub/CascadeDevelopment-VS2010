@model Cascade.Web.Models.ChangePasswordModel
@{    Layout = null;}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/themes/base/css") <title>ChangePassword</title>
    <style>
        body
        {
            background-color: #336699;
            background-repeat: no-repeat;
            background-position: center;
            font-family: Verdana;
            font-size: 8pt;
        }
        table
        {
            font-family: Verdana;
            font-size: 8pt;
        }
        .validation-summary-errors
        {
        	color:Red;
        }
    </style>
</head>
<body>
    <div id="changePasswordContainer">
        @if (ViewBag.IsIntialPasswordChange)
        {
 @Html.Label("text", "Upon initial system login, each user is required to change their password.")
        }
        New passwords must be at least @Membership.MinRequiredPasswordLength characters in length including @Membership.MinRequiredNonAlphanumericCharacters "special" character (e.g. !, $, # etc.)
        @using (Html.BeginForm())
        {
 @Html.ValidationSummary()


            <fieldset>
                <legend>Change Password Form</legend>
                <table>
                    <tr>
                        <td>Old Password
                        </td>
                        <td>
                            :
                        </td>
                        <td>@Html.PasswordFor(m => m.OldPassword)
                        </td>
                    </tr>
                    <tr>
                        <td>New Password
                        </td>
                        <td>
                            :
                        </td>
                        <td>@Html.PasswordFor(m => m.NewPassword)
                        </td>
                    </tr>
                    <tr>
                        <td>Confirm Password
                        </td>
                        <td>
                            :
                        </td>
                        <td>@Html.PasswordFor(m => m.ConfirmPassword)
                        </td>
                    </tr>
                </table>
                <input type="submit" value="Change password" style="background-color: #336699; color: White" />
            </fieldset>
        }
    </div>
    <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.8.11.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#changePasswordContainer').dialog({ modal: true, title: 'Change Password:', autoOpen: false, width: 500, height: 300 });
            $('#changePasswordContainer').dialog('open');
        });
    </script>
</body>
</html>
